@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        @Html.AntiForgeryToken()
                        <h3 class="panel-title">Create a new account.</h3>
                        <hr />
                        @Html.ValidationSummary()
                    </div>
                    <div class="panel-body">
                        <fieldset>
                            <input id="UserName" class="form-control" placeholder="Username" name="UserName" type="text" autofocus>
                            <br />
                            <input id="Password" class="form-control" placeholder="Password" name="Password" type="password" value="">
                            <br />
                            <input id="ConfirmPassword" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" type="password" value="">
                            <hr />
                            <input id="FirstName" class="form-control" placeholder="First Name" name="FirstName" type="text">
                            <br />
                            <input id="LastName" class="form-control" placeholder="Last Name" name="LastName" type="text">
                            <br />
                            <input id="EmailAddress" class="form-control" placeholder="Email Address" name="EmailAddress" type="text">
                            <br />
                            <textarea id="Address" class="form-control" placeholder="Address" name="Address"></textarea>
                            <br />
                            <input id="PhoneNumber" class="form-control" placeholder="Phone Number" name="PhoneNumber" type="text">
                            <br />
                            <input id="ReferralUserName" class="form-control" placeholder="Referred By" name="ReferralUserName" type="text">
                            <hr />
                            <div class="g-recaptcha" data-sitekey="6Lc5GBoTAAAAAAEQ98bJVGjZJOgt_WlfZOgkVAM9"></div>
                            <br />
                            <input type="submit" value="Register" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<script src="/dist/js/sb-admin-2.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var referral = "@Referral";
        document.getElementById('ReferralUserName').value = referral.toUpperCase();
    });
</script>