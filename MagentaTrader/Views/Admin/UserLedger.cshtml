@*Loading*@
<div class="modal fade" id="loading" tabindex="-1" role="dialog" aria-labelledby="Loading..." aria-hidden="true">
    <div class="modal-dialog" style="width: 220px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Loading...</h4>
            </div>
            <div class="modal-body">
                <img src="/img/progress_bar.gif" />
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function GetValue(value) {
        var variable = window.location.search.substring(1);
        var variableArr = variable.split('?');
        for (var i = 0; i < variableArr.length; i++) {
            var keyValue = variableArr[i].split('=');
            if (keyValue[0] == value) {
                return keyValue[1];
            }
        }
    }

    function GetUserLedger() {

        var username = GetValue('user');

        $('#loading').modal('show');
        $.ajax({
            url: '/api/GetUser/' + username,
            type: 'GET',
            data: {},
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (Results) {
                //$('#loading').modal('hide');
                if (Results.length > 0) {
                    $('#UserID').val(Results[0].Id);
                    $('#Username').val(Results[0].UserName);
                    $('#FirstName').val(Results[0].FirstName);
                    $('#LastName').val(Results[0].LastName);
                    $('#EmailAdd').val(Results[0].EmailAddress);
                    $('#PhoneNum').val(Results[0].PhoneNumber);
                }
                else {
                    $('#Username, #FirstName, #LastName, #EmailAdd, #PhoneNum').text("");
                }
            }
        }).fail(
            function (xhr, textStatus, err) {
                alert(err);
            }
        );
    }

    function GetPurchases() {

        var purchases = new wijmo.collections.ObservableArray();
        var username = GetValue('user');

        $.ajax({
            url: '/api/UserSales/' + username,
            type: 'GET',
            data: {},
            contentType: 'application/json; charset=utf-8',
            success: function (Results) {
                $('#loading').modal('hide');
                if (Results.length > 0) {
                    for (i = 0; i < Results.length; i++) {
                        purchases.push({
                            ProductPackage: Results[i]["ProductPackage"],
                            SalesNumber: Results[i]["SalesNumber"],
                            SalesDate: Results[i]["SalesDate"],
                            RenewalDate: Results[i]["RenewalDate"],
                            ExpiryDate: Results[i]["ExpiryDate"],
                            Particulars: Results[i]["Particulars"],
                            Quantity: Results[i]["Quantity"],
                            Amount: Results[i]["Amount"],
                            Price: Results[i]["Price"]
                        });
                    }
                } else {
                    alert("No Purchases");
                }
            }
        }).fail(
            function (xhr, textStatus, err) {
                alert(err);
            }
        );

        return purchases;
    }

    $(document).ready(function () {
        GetUserLedger();

        Sales = new wijmo.collections.CollectionView(GetPurchases());

        SalesGrid = new wijmo.grid.FlexGrid('#SalesLedgerGrid');

        SalesGrid.initialize({
            columns: [
                {
                    "header": "Sales Date",
                    "binding": "SalesDate",
                    "allowSorting": false,
                    "width": 100
                },
                {
                    "header": "Sales Number",
                    "binding": "SalesNumber",
                    "allowSorting": false,
                    "width": 150
                },
                {
                    "header": "Product Package",
                    "binding": "ProductPackage",
                    "allowSorting": false,
                    "width": 500
                },
                //{
                //    "header": "Particulars",
                //    "binding": "Particulars",
                //    "allowSorting": false,
                //    "width": 250
                //},
                //{
                //    "header": "Quantity",
                //    "binding": "Quantity",
                //    "allowSorting": false,
                //    "width": "4*"
                //},
                //{
                //    "header": "Amount",
                //    "binding": "Amount",
                //    "allowSorting": false,
                //    "width": "4*"
                //},
                {
                    "header": "Price",
                    "binding": "Price",
                    "allowSorting": false,
                    "width": "4*"
                },
                //{
                //    "header": "Renewal Date",
                //    "binding": "RenewalDate",
                //    "allowSorting": false,
                //    "width": 100
                //},
                //{
                //    "header": "Expiry Date",
                //    "binding": "ExpiryDate",
                //    "allowSorting": false,
                //    "width": 100
                //}
            ],
            autoGenerateColumns: false,
            itemsSource: Sales,
            isReadOnly: true,
            selectionMode: wijmo.grid.SelectionMode.Row
        });
    });

</script>
