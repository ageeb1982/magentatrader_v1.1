        $('#loading').modal('show');
        $.ajax({
            url: '/api/GetFilteredSales/' + dateStart + '/' + dateEnd + '/' + packageGroup + '/' + status,
            cache: false,
            type: 'GET',
            dataType: 'json',
            success: function (Results) {
                $('#loading').modal('hide');
                $('#loading').modal('hide');
                for (i = 0; i < Results.length; i++) {
                    totalAmount += Results[i]["Amount"];
                    totalSalesAmount += Results[i]["SalesAmount"];
